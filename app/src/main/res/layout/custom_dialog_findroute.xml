<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TÌM ĐƯỜNG"
            android:id="@+id/txtTimDuong"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_weight="0.40"
            android:textSize="20sp"
            android:background="#125688"
            android:textColor="#fff"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Điểm xuất phát:"
            android:id="@+id/textView10"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:textSize="15sp"
            android:layout_marginStart="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10">

            <EditText
                android:id="@+id/editXuatPhat"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="9"
                android:hint="Nhập điểm xuất phát..."
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:layout_marginStart="5dp" />


            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnStart"
                android:layout_weight="1"
                android:src="@drawable/define_location" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm kết thúc:"
                android:layout_weight="7"
                android:id="@+id/txtketthuc"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:layout_marginStart="5dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:id="@+id/btnSwap"
                android:layout_weight="1"
                android:src="@drawable/swap" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10">

            <EditText
                android:id="@+id/editKetThuc"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="9"
                android:hint="Nhập điểm kết thúc..."
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:layout_marginStart="5dp" />



            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnFinish"
                android:layout_weight="1"
                android:src="@drawable/define_location" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Số tuyến xe tối đa cần đi:"
                android:id="@+id/textView11"
                android:layout_weight="1"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp" />

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerSoXe"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:weightSum="2">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="TÌM ĐƯỜNG"
                android:id="@+id/btnFind"
                android:layout_weight="1"
                android:textStyle="bold"
                android:background="#125688"
                android:textColor="#FFF" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="QUAY LẠI"
                android:id="@+id/btnThoat"
                android:layout_weight="1"
                android:textStyle="bold"
                android:background="#125688"
                android:textColor="#FFF" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
